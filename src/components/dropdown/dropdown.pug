include ../input/input
include ../buttons/button

mixin dropdown(placeholder = 'Cколько гостей')
	.dropdown
		.dropdown__input
			+input(false,'expand_more')(class!=attributes.input__dropdown placeholder=placeholder)
		.dropdown__window
			.dropdown__window__block
				h3 взрослые
				button(type='button').dropdown__window__button-min -
				span 0
				button(type='button').dropdown__window__button-plu +
			.dropdown__window__block
				h3 дети
				button(type='button').dropdown__window__button-min -
				span 0
				button(type='button').dropdown__window__button-plu +
			.dropdown__window__block
				h3 младенцы
				button(type='button').dropdown__window__button-min -
				span 0
				button(type='button').dropdown__window__button-plu +
			.dropdown__window__button-footer
				+button__tran('очистить')(type='button')
				+button__tran('применить')(type='button')
